{
  "name": "@rhinolabs/rhinolabs-ui",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "npm run lint-js && npm run lint-styles",
    "lint:fix": "npm run lint-js:fix && npm run lint-styles:fix",
    "lint-js": "eslint {packages,lib}/**/src/**/*.{ts,tsx}",
    "lint-js:fix": "eslint {packages,lib}/**/src/**/*.{ts,tsx} --fix",
    "lint-styles": "stylelint '{packages,lib}/**/*.{css,scss,sass}'",
    "lint-styles:fix": "stylelint '{packages,lib}/**/*.{css,scss,sass}' --fix",
    "clean:node-modules": "rimraf packages/**/node_modules && rimraf libs/**/node_modules && rm -rf node_modules",
    "format:check": "prettier --check {packages,lib}/**/src/** --cache ",
    "format:write": "prettier --write {packages,lib/**/src/** --cache "
  },
  "devDependencies": {
    "@rhino-ui/eslint-config": "workspace:^",
    "@types/node": "^20.11.19",
    "crossenv": "0.0.2-security",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "ts-loader": "^8.4.0",
    "tslib": "^2.6.2",
    "turbo": "latest",
    "typescript": "^5.3.3",
    "stylelint": "^15.11.0"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
